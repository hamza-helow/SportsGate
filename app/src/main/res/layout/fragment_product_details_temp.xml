<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="isLogin"
            type="Boolean" />

        <variable
            name="showAddToCart"
            type="Boolean" />

        <variable
            name="details"
            type="com.souqApp.data.product_details.remote.ProductDetailsEntity" />

        <variable
            name="discount"
            type="Double" />

        <variable
            name="price"
            type="String" />

        <variable
            name="priceAfterDiscount"
            type="String" />

        <variable
            name="hasRelevantProducts"
            type="Boolean" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


       <ScrollView
           android:fillViewport="true"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <androidx.appcompat.widget.LinearLayoutCompat
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:layout_height="0dp">
               <FrameLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <androidx.recyclerview.widget.RecyclerView
                       android:id="@+id/rec_promotion"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                       tools:ignore="SpeakableTextPresentCheck"
                       tools:listitem="@layout/item_promotion" />

                   <ru.tinkoff.scrollingpagerindicator.ScrollingPagerIndicator
                       android:id="@+id/indicator_list_promotion"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="bottom|center"
                       android:layout_margin="@dimen/_8sdp"
                       app:spi_dotColor="@color/grey"
                       app:spi_dotSelectedColor="@color/colorPrimary"
                       app:spi_dotSize="@dimen/_5sdp" />

               </FrameLayout>


               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="@dimen/_8sdp"
                   android:layout_marginTop="@dimen/_8sdp"
                   android:text='@{details.name}'
                   tools:text="product_name" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="@dimen/_8sdp"
                   android:layout_marginTop="@dimen/_8sdp"
                   android:text='@{price}'
                   app:isDiscountPrice="@{discount >0.0}"
                   tools:text="original price" />

               <androidx.appcompat.widget.LinearLayoutCompat
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/_8sdp"
                   android:orientation="horizontal">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginHorizontal="@dimen/_8sdp"
                       android:text='@{priceAfterDiscount}'
                       android:textStyle="bold"
                       app:isVisible="@{discount >0.0}"
                       tools:text="price after discount" />

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="@{ '-' + String.valueOf(details.discountPercentage) + '%'}"
                       android:textColor="@color/red"
                       android:textSize="12sp"
                       tools:text="-100%" />

               </androidx.appcompat.widget.LinearLayoutCompat>


               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/rec_variations"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="@dimen/_8sdp"
                   android:layout_marginTop="@dimen/_12sdp"
                   tools:itemCount="2"
                   tools:listitem="@layout/item_variation" />


               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/rec_tag"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginVertical="@dimen/_8sdp"
                   android:orientation="horizontal"
                   app:layoutManager="com.google.android.flexbox.FlexboxLayoutManager"
                   tools:itemCount="3"
                   tools:listitem="@layout/item_tag" />


               <WebView
                   android:id="@+id/webView"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent" />


               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/_8sdp"
                   android:paddingHorizontal="@dimen/_8sdp"
                   android:text="@string/relevant_products"
                   app:isVisible="@{hasRelevantProducts}" />

               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/rec_relevant"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/_8sdp"
                   android:layout_marginBottom="@dimen/_64sdp"
                   android:orientation="horizontal"
                   app:isVisible="@{hasRelevantProducts}"
                   app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                   tools:listitem="@layout/item_product_relevant" />


           </androidx.appcompat.widget.LinearLayoutCompat>



       </ScrollView>



        <CheckedTextView
            android:layout_margin="@dimen/_16sdp"
            android:id="@+id/img_favorite"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:background="@drawable/favorite_selector"
            app:srcCompat="@drawable/ic_baseline_favorite_border_24" />


        <ImageView
            android:layout_margin="@dimen/_16sdp"
            android:id="@+id/img_back"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="top|end"
            android:layout_weight="1"
            android:src="@drawable/ic_arrow_right" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/white"
            app:contentPadding="@dimen/_8sdp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_to_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="@{details.qty > 0}"
                android:text="@{details.qty > 0 ? @string/add_to_cart : @string/not_available}"
                android:visibility="invisible"
                app:isVisible="@{showAddToCart}"
                tools:text="@string/add_to_cart"
                tools:visibility="visible" />


        </androidx.cardview.widget.CardView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>