<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Light-->
    <style name="ThemeLight" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:spinnerMode">dropdown</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textSize">15sp</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="buttonStyle">@style/ButtonFillStyle</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundBaseScreen">@color/gray_background</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:statusBarColor">@color/tool_bar_color</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="bottomNavColor">@color/white</item>
        <item name="navigationIcon">@drawable/ic_circle_back</item>
    </style>


    <!-- Night-->


    <style name="ButtonFillStyle" parent="@style/Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/background_button_curve</item>
        <item name="android:minHeight">@dimen/_40sdp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <!-- it is blue color -->


    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#000000</item>
    </style>

</resources>