<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/_16sdp"
            tools:context=".presentation.addresses.add_address.AddAddressFragment">

            <include
                android:id="@+id/loader"
                layout="@layout/loader" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8sdp"
                android:text="@string/name" />

            <EditText
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/border_bg"
                android:hint="@string/insert_your_name"
                android:importantForAutofill="no"
                android:inputType="text"
                android:padding="@dimen/_8sdp"
                android:textColor="#757575" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:text="@string/email" />

            <EditText
                android:id="@+id/txt_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/border_bg"
                android:hint="@string/insert_your_email_address"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:padding="@dimen/_8sdp"
                android:textColor="#757575" />


            <include
                android:id="@+id/include_phone_number"
                layout="@layout/edit_text_phone_number"
                android:layout_width="match_parent"
                app:hint="@{@string/insert_phone_number}"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_16sdp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:text="@string/message_str" />

            <EditText
                android:id="@+id/txt_message"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:background="@drawable/border_bg"
                android:gravity="top"
                android:importantForAutofill="no"
                android:inputType="textMultiLine"
                android:padding="@dimen/_8sdp"
                tools:ignore="LabelFor" />

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginVertical="@dimen/_16sdp"
                android:enabled="false"
                android:text="@string/submit" />

        </LinearLayout>

    </ScrollView>

</layout>