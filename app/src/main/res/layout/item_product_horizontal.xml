<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="product"
            type="com.souqApp.data.main.home.remote.dto.ProductEntity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_12sdp">

        <ImageView
            android:id="@+id/img_product"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:networkImage="@{product.thumb}"
            app:srcCompat="@drawable/gym_category_for_test"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/txt_name_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="@{product.name}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/img_product"
            app:layout_constraintTop_toTopOf="@+id/img_product"
            tools:layout_editor_absoluteX="206dp"
            tools:layout_editor_absoluteY="16dp"
            tools:text="@tools:sample/last_names" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/cardPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_product"
            app:layout_constraintTop_toBottomOf="@+id/txt_name_product">

            <TextView
                android:id="@+id/txtPriceBeforeDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{product.price}"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:isDiscountPrice="@{product.discountPercentage > 0}"
                tools:text="price" />

            <TextView
                android:id="@+id/txtPriceAfterDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{product.discountedProductPrice}"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:isVisible="@{product.discountPercentage > 0}"
                tools:text="price" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <include
            layout="@layout/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_product" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>