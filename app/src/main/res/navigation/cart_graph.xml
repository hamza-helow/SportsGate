<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cart_graph"
    app:startDestination="@id/cartFragment">

    <fragment
        android:id="@+id/cartFragment"
        android:name="com.souqApp.presentation.main.cart.home.CartFragment"
        android:label="Shopping Cart"
        tools:layout="@layout/fragment_cart">
        <action
            android:id="@+id/to_paymentDetailsFragment"
            app:destination="@id/paymentDetailsFragment" />

    </fragment>

    <fragment
        android:id="@+id/paymentDetailsFragment"
        android:name="com.souqApp.presentation.main.cart.checkout_details.CheckOutDetailsFragment"
        android:label="@string/payment_details"
        tools:layout="@layout/fragment_payment_details">

        <action
            android:id="@+id/to_addresses_graph"
            app:destination="@+id/addresses_graph">

            <argument
                android:name="selectedMode"
                android:defaultValue="false"
                app:argType="boolean" />
        </action>
        <action
            android:id="@+id/to_checkoutCompleted"
            app:destination="@id/checkoutCompleted" />

    </fragment>


    <include app:graph="@navigation/addresses_graph" />
    <include app:graph="@navigation/orders_graph" />


    <dialog
        android:id="@+id/checkoutCompleted"
        android:name="com.souqApp.presentation.main.cart.checkout_details.CheckoutCompletedFragment"
        tools:layout="@layout/fragment_checkout_completed">

        <argument
            android:name="orderId"
            app:argType="integer" />

        <action
            android:id="@+id/to_orderDetailsFragment"
            app:destination="@id/orderDetailsFragment"
            app:popUpTo="@id/homeFragment" />

        <action
            android:id="@+id/to_orders_graph"
            app:destination="@id/orders_graph" />
    </dialog>


    <fragment
        android:id="@+id/orderDetailsFragment"
        android:name="com.souqApp.presentation.orders.details.OrderDetailsFragment"
        android:label="@string/order_details"
        tools:layout="@layout/fragment_order_details">

        <argument
            android:name="orderId"
            app:argType="integer" />

    </fragment>
</navigation>